[pylint]
jobs=4
errors-only=yes
ignore=_librsync.so
msg-template='{path}:{line}: [{msg_id}({symbol}), {obj}] {msg}'

disable=
        C,
        R,
        invalid-name,
        line-too-long,
        missing-function-docstring,
        missing-module-docstring,
        no-member,
        no-name-in-module,
        not-callable,
        raise-missing-from,
        undefined-variable,
        wrong-import-order,
        wrong-import-position

enable=
        unused-argument,
        access-member-before-definition,
        unused-wildcard-import,
        redefined-builtin,
        bad-indentation,
        mixed-indentation,
        unreachable
